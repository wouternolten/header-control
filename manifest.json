{
    "manifest_version": 2,
    "name": "Header Control",
    "description": "This extension allows you to control headers sent per hostname.",
    "version": "1.0",
    "browser_action": {
        "default_popup": "templates/popup.html",
        "default_title": "Header Control"
    },
    "permissions": [
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "storage",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "src/background.js"
        ]
    }
}
